# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database
MONGODB_URI=mongodb://localhost:27017/swarg_messenger
MONGODB_TEST_URI=mongodb://localhost:27017/swarg_messenger_test

# JWT
JWT_SECRET=your_super_strong_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=30d
JWT_COOKIE_EXPIRE=30

# Encryption
ENCRYPTION_SECRET=your_encryption_secret_key_for_message_signing

# Client URL
CLIENT_URL=http://localhost:3000

# File Upload
MAX_FILE_SIZE=52428800 # 50MB in bytes
UPLOAD_PATH=./uploads

# Cloud Storage (Optional - for production)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region
AWS_BUCKET_NAME=your_bucket_name

# Email (Optional - for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@swarg.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100

# WebRTC
STUN_SERVER_URL=stun:stun.l.google.com:19302
TURN_SERVER_URL=turn:your_turn_server.com:3478
TURN_USERNAME=your_turn_username
TURN_CREDENTIAL=your_turn_password

# Feature Flags
ENABLE_TWO_FACTOR=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_FILE_UPLOAD=true
ENABLE_VIDEO_CALLS=true
